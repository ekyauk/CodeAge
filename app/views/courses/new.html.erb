<h2>New Courses</h2>

<%= form_for(@course) do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
  <%= f.label :url %><br />
  <%= f.text_field :url %><br />
  <%= f.label :description %><br />
  <%= f.text_area :description %><br />
  <%= f.label :difficulty %><br />
  <%= f.select :difficulty, options_for_select([['Easy', 1], ['Medium', 2], ['Hard', 3]]) %><br />
  <%= f.label :duration %><br />
  <%= f.time_field :duration %></div>

  <div><%= f.submit 'Create Course' %></div>
<% end %>
